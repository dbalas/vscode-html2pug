{
    "name": "vscode-html2pug",
    "displayName": "html2pug",
    "description": "HTML to PUG VSCode extension",
    "version": "4.0.0",
    "icon": "icon.png",
    "bugs": {
        "url": "https://github.com/dbalas/vscode-html2pug/issues",
        "email": "dbalasdev@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dbalas/vscode-html2pug.git"
    },
    "license": "MIT",
    "publisher": "dbalas",
    "engines": {
        "vscode": "^1.25.0"
    },
    "tags": [
        "vscode",
        "jade",
        "pug",
        "html2pug",
        "html2jade"
    ],
    "categories": [
        "Programming Languages",
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.transformHtmlToPug"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [
            {
                "command": "extension.transformHtmlToPug",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p",
                "linux": "ctrl+alt+p"
            }
        ],
        "commands": [
            {
                "command": "extension.transformHtmlToPug",
                "title": "html2pug: Transform"
            }
        ],
        "configuration": {
            "title": "html2pug settings",
            "properties": {
                "html2pug.tabs": {
                    "type": "boolean",
                    "default": false,
                    "description": "!editor.options.insertSpaces"
                },
                "html2pug.fragment": {
                    "type": "boolean",
                    "default": true
                },
                "html2pug.doubleQuotes": {
                    "type": "boolean",
                    "default": false
                },
                "html2pug.commas": {
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^14.14.13",
        "eslint": "^6.0.1",
        "typescript": "^3.4.5",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "html2pug": "^4.0.0"
    }
}
